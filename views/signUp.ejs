<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <style>
        body {

            background-color: rgb(177, 36, 36);
            color: white;
            font-family: 'Arial', sans-serif;
            transform: scale(0.85);
        }
        .card {
            background-color: #b30000;
            color: white;
            border-radius: 10px;
            transform: scale(0.95);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
        }
        .card-body {
            background-color: #990000;
        }
        .form-label {
            color: white;
            font-weight: bold;
        }
        #retour-accueil{
            font-size:1.2 rem;
        }
        .btn-primary {
            background-color: #ff0000;
            border: none;
            box-shadow: 0 4px 6px rgba(255, 0, 0, 0.2);
        }
        .btn-primary:hover {
            background-color: #cc0000;
            box-shadow: 0 8px 12px rgba(255, 0, 0, 0.3);
        }
        .link-secondary {
            color: white;
        }
        .link-secondary:hover {
            text-decoration: underline;
        }
        .error, .login {
            color: white;
            background-color: #8B0000;
            padding: 10px;
            border-radius: 5px;
        }
        .signup-link {
            color: white;
            display: block;
            text-align: center;
            margin-top: 20px;
        }
        .signup-link a {
            color: #ff6666;
            font-weight: bold;
        }
        .signup-link a:hover {
            text-decoration: underline;
        }
        .card-header {
            background-color: #ff0000;
            color: white;
            font-size: 1.5rem;
            font-weight: bold;
            text-align: center;
            padding: 20px;
            border-radius: 10px 10px 0 0;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.5);
        }
        .form-control:focus {
            border-color: #ff0000;
            box-shadow: 0 0 5px rgba(255, 0, 0, 0.5);
        }
    </style>
</head>
<body>

<!-- Sign Up Form -->
<section class="bg-dark p-3 p-md-4 p-xl-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-5">
                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-header">
                        Creer votre compte
                    </div>
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <div class="row">
                            <div class="col-12">
                                <p class="mt-5 mb-4 text-center"></p>
                                
                                <form id="signup-Form" action="/signup" method="POST">
                                    <div class="row gy-3 overflow-hidden">
                                        <div class="col-12">
                                            <div class="form-floating mb-3">
                                                <input type="text" class="form-control" name="nom" id="nom" placeholder="nom" required>
                                                <label for="nom" class="form-label" >Nom</label>
                                            </div>
                                        </div>
                                        <div class="row gy-3 overflow-hidden">
                                            <div class="col-12">
                                                <div class="form-floating mb-3">
                                                    <input type="text" class="form-control" name="prenom" id="prenom" placeholder="prenom" required>
                                                    <label for="prenom" class="form-label" >Prénom</label>
                                                </div>
                                            </div>
                                        <div class="col-12">
                                            <div class="form-floating mb-3">
                                                <input type="email" class="form-control" name="email" id="email" placeholder="name@example.com" required>
                                                <label for="email" class="form-label">Email</label>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-floating mb-3">
                                                <input type="password" class="form-control" name="password" id="password" placeholder="Mot de passe" required>
                                                <label for="password" class="form-label">Password</label>
                                            </div>
                                        </div>
                                        <!-- <div class="col-12">
                                            <div class="form-floating mb-3">
                                                <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" placeholder="Confirm Password" required>
                                                <label for="confirmPassword" class="form-label">Confirm Password</label>
                                            </div>
                                        </div> -->
                                        <div class="col-12">
                                            <div class="d-grid">
                                                <button class="sign-up btn btn-primary" type="submit">Enregistrez-vous</button>
                                            </div>
                                            <br>
                                            <div id="confirmation"></div>
                                            <a style="font-size:1.4rem" href="/users/login" class="link-body-emphasis text-decoration-none">Déja membre?  Connectez-vous</a>
                                        </div>
                                        <div class="d-grid">
                                            <a id="retour-accueil" href="http://localhost:3000" >Retour à l'accueil<a>
                                        </div>
                                    </div>
                                </form>

                                <!-- Error or success message handling -->
                                <div class="error mt-4" style="display: none;">
                                    <p>Something went wrong. Please try again.</p>
                                </div>

                                <div class="login mt-4" style="display: none;">
                                    <p>Your account has been created successfully!</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    // Function to handle form submission
    document.getElementById('signup-Form').addEventListener('submit', async function(event) {
     event.preventDefault(); // Prevent default form submission

     // Collect the form data
     const formData = new FormData(event.target);
     const data = {

         nom: formData.get('nom'),
         prenom: formData.get('prenom'),
         email : formData.get('email'),
         password: formData.get('password'),
         
     };

     console.log('Data to send:', data); // Debugging

     try {
         // Make a PUT request to the backend to reserve the court
         const response = await fetch('http://localhost:3000/users/signup', {  // Keep /users prefix here if needed
             method: 'POST', // Use post method as intended by your backend
             headers: {
                 'Content-Type': 'application/json',
             },
             body: JSON.stringify(data)
         });

         console.log('Server response:', response); // Check server response

         if (response.ok) {
             // If the reservation was successful, show the confirmation message
             const result = await response.json();
             document.getElementById('confirmation').innerHTML = `Merci ${data.prenom}, pour votre inscription est confirmée.`;
         } else {
             // If there's an error with the reservation, show the message returned from the server
             const result = await response.json();
             alert(result.message || 'Une erreur s\'est produite, veuillez recommencer.');
         }

     } catch (error) {
         // Handle any errors that occur during the fetch request
         console.log('Error:', error);
         alert('An error occurred while signing up.');
     }
 });

