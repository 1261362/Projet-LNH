<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title></title>
</head>
<style>
  
  body{
        margin-left: 8%;
        margin-right: 8%;
        background-color: #ccc;
        font-family: Arial, Helvetica, sans-serif;
    }

  .mainContainer{
    display: flex;
    flex-direction: column;
    background-color: #ffffff;
  }
  .containerEntete, .containerJoueur{
    display: flex;
    justify-content: space-around;
    background-color: #f1f1f1;
    padding: 10px;
    border-top: 2px solid #ccc;
    text-align: center;
    align-items: center;
  }
   /* Styles pour alterner les couleurs des lignes */
   .containerEntete:nth-child(odd), .containerJoueur:nth-child(odd) {
    background-color: #ffffff;
  }
  
  .containerEntete div, .containerJoueur div {
    width: 150px;
    align-items: center;  
    font-size: 20px;  
    font: bold;
  }
  .playerContainer h1{
    font-size: 60px;
    margin-left: 10px;
  } 
  .playerContainer h3{
    font-size: 40px;
    border-top: 2px solid #ccc;
    padding-top: 30px;
    justify-items: center;
    margin-left: 10px;
  } 

 
</style>
<body>
  <%- include('composant/navbar') %> 

  <div class="mainContainer">
    <div class="playerContainer">
      <h1>Formation</h1>      
      <h3>Attaquant</h3>
      <div class="listeJoueur">
        <!--Entête-->
       <div class="containerEntete">
        <div>Joueur</div>
        <div>#</div>
        <div>Position</div>
        <div>Nationnaliter</div>
        <div>Grandeur</div>
        <div>Hauteur</div>
        <div>Date de naissance</div>
      </div>
       
       <!--Joueur-->
       <% const attaquant = joueurs.filter(joueur => joueur.position == "C" || joueur.position == "L" || joueur.position == "R"); %>
       <% attaquant.forEach(joueur => { %>
      <div class="containerJoueur">
        <div style="display: flex; ">
          <div>
            <img style="width: 120px; border-radius: 50%; background-color: rgb(73, 72, 72); margin-right: 10px;" src="<%= joueur.headshot%>" alt="<%= joueur.firstName%> <%= joueur.lastName%>">
          </div>
          <div class="" style="width: 300px;">
            <%= joueur.firstName%> <%= joueur.lastName%>
          </div>
        </div>
        <div><%= joueur.sweaterNumber%></div>
        <div><%= joueur.position%></div>
        <div><%= joueur.nationality%></div>
        <div><%= joueur.heightInInches%></div>
        <div><%= joueur.weightInPounds%></div>
        <div><%= joueur.birthDate%></div>   
      </div>
      <% }) %>
    </div>  

    <!--Défenseur-->
    <div class="playerContainer">     
      <h3>Défenseur</h3>
      <div class="listeJoueur">
        <!--Entête-->
       <div class="containerEntete">
        <div>Joueur</div>
        <div>#</div>
        <div>Position</div>
        <div>Nationnaliter</div>
        <div>Grandeur</div>
        <div>Hauteur</div>
        <div>Date de naissance</div>
      </div>
       
       <!--Joueur-->
       <% const def = joueurs.filter(joueur => joueur.position == "D"); %>
       <% def.forEach(joueur => { %>
      <div class="containerJoueur">
        <div style="display: flex; ">
          <div>
            <img style="width: 75px; border-radius: 30%;" src="<%= joueur.headshot%>" alt="<%= joueur.firstName%> <%= joueur.lastName%>">
          </div>
          <div class="" style="width: 300px;">
            <%= joueur.firstName%> <%= joueur.lastName%>
          </div>
        </div>
        <div><%= joueur.sweaterNumber%></div>
        <div><%= joueur.position%></div>
        <div><%= joueur.nationality%></div>
        <div><%= joueur.heightInInches%></div>
        <div><%= joueur.weightInPounds%></div>
        <div><%= joueur.birthDate%></div>
        
      </div>
      <% }) %>
    </div> 

    <!--Gardien-->
    <div class="playerContainer">     
      <h3>Gardien</h3>
      <div class="listeJoueur">
        <!--Entête-->
       <div class="containerEntete">
        <div>Joueur</div>
        <div>#</div>
        <div>Position</div>
        <div>Nationnaliter</div>
        <div>Grandeur</div>
        <div>Hauteur</div>
        <div>Date de naissance</div>
      </div>
       
       <!--Joueur-->
       <% const gardien = joueurs.filter(joueur => joueur.position === "G"); %>
       <% gardien.forEach(joueur => { %>
      <div class="containerJoueur">
        <div style="display: flex; ">
          <div>
            <img style="width: 75px; border-radius: 30%;" src="<%= joueur.headshot%>" alt="<%= joueur.firstName%> <%= joueur.lastName%>">
          </div>
          <div class="" style="width: 300px;">
            <%= joueur.firstName%> <%= joueur.lastName%>
          </div>
        </div>
        <div><%= joueur.sweaterNumber%></div>
        <div><%= joueur.position%></div>
        <div><%= joueur.nationality%></div>
        <div><%= joueur.heightInInches%></div>
        <div><%= joueur.weightInPounds%></div>
        <div><%= joueur.birthDate%></div>
        
      </div>
      <% }) %>
    </div>   

    
  </div>
</body>
</html>