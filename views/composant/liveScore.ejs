<link rel="stylesheet" href="/css/liveScore.css">
<div class="nav">
<% if (games && games.length > 0) { %>
    <% games.forEach(dateEntry => { %>           
            <div><h3><%= dateEntry.games[0].today %></h3></div>
            <% dateEntry.games.forEach(game => { %>
                <div class="nav-item">
                    <a href="/game/boxscore/<%= game.id %>">
                        <div style="display: flex; justify-content: space-between; font-size: medium; ">
                            <div><%= game.gameState %></div>
                            <div><%= game.formattedStartTime %></div>
                            
                        </div>
                        <div class="team">
                            <img src="<%= game.awayTeam.logo %>" alt="<%= game.awayTeam.name %>">
                            <div class="team-abrrev"><%= game.awayTeam.abbrev %></div>
                            <div class="team-score"><%= game.awayTeam.score %></div>
                        </div>
                        <div class="team">
                            <img src="<%= game.homeTeam.logo %>" alt="<%= game.homeTeam.name %>">
                            <div class="team-abrrev"><%= game.homeTeam.abbrev %></div>
                            <div class="team-score"><%= game.homeTeam.score %></div>
                        </div>
                    </a>
                </div>
            <% }) %>
    <% }) %>
<% } else { %>
    <div class="nav-item">Aucun match en cours</div>
<% } %>
</div>





