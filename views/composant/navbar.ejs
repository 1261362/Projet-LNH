
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="/css/navbar.css">
<body>    
    <nav>
        <ul style="list-style: none; display: flex; justify-content: space-around; margin: 0; padding: 0;">
            <!-- logo nhl -->
            <li>
                <a href="/">
                    <img src="/images/nhl-logo.png" alt="NHL Logo" class="nhl-logo">
                </a>
            </li>
            <li><a href="/">Acceuil</a></li>
            <li><a href="/listeEquipes">Équipes</a></li>
            <li><a href="/stats">Statistique</a></li>
            <li><a href="/classement">Classement</a></li>
            <li><a href="https://www.nhlshop.ca/source/BM-nhlcom-HP-main-nav-ca">Boutique</a></li>

            <!-- menu deroulant membres -->
            <!-- navbar.ejs -->
<li class="dropdown">
    <% if (username) { %>
        <a href="#" class="dropdown-link" style="display: flex; align-items: center;">
            <!-- User image ou puck.png si manquant-->
            <img src="<%= userImage %>" alt="User Image"
                 onerror="this.src='/images/puck.png';" 
                 style="height: 80px; border-radius: 50%; margin-right: 10px" />
            <span style="margin-left: 10px;"><%= username %></span>
        </a>
        <div class="dropdown-content">
            <a href="/users/logout">Se déconnecter</a>

            <a href="/users/members">Votre espace</a>
            <p><a href="#" id="upload-link">Ajouter votre photo</a></p>
            <form action="/users/uploadPhoto" method="POST" enctype="multipart/form-data">
                <input type="hidden" name="MAX_FILE_SIZE" value="2097152">
                <input type="file" name="photo" id="fileInput" style="display:none;" accept="image/jpeg, image/png, image/gif" />
                <button type="submit" id="submitBtn" style="display:none;"></button>
            </form>
        </div>
    <% } else { %>
        <a href="#" class="dropdown-link">Membres</a>
        <div class="dropdown-content">
            <a href="/users/login">Se connecter</a>
            <a href="http://localhost:3000/users/signup">Créer un compte</a>
        </div>
    <% } %>
</li>

            
        </ul>
    </nav>
    
     <script src="/js/profile.js"></script>
</body>
