                <li><a href="/<%= equipe.teamsABV %>/joueur">Joueur</a></li>
                <li><a href="">Informatinon équipe</a></li>
                <li><a href="#">Ajout dun autre chose</a></li>
              </ul>           
            </div>
          </div>    
          <% }) %>
    </div>
  </div>

  <% const PacificTeams = equipe.filter(equipe => equipe.division === "Pacific"); %>
  <% const CentralTeams = equipe.filter(equipe => equipe.division === "Central"); %>
  <h1 style="text-align: center;">Conférence de l'Ouest</h1>
