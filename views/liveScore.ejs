<script>
    function goToPreviousDate() {
        const datePicker = document.getElementById('date-picker');
        const currentDate = new Date(datePicker.value || new Date());
        currentDate.setDate(currentDate.getDate() - 1);
        datePicker.value = currentDate.toISOString().split('T')[0];
        updateSchedule(datePicker.value);
    }

    function goToNextDate() {
        const datePicker = document.getElementById('date-picker');
        const currentDate = new Date(datePicker.value || new Date());
        currentDate.setDate(currentDate.getDate() + 1);
        datePicker.value = currentDate.toISOString().split('T')[0];
        updateSchedule(datePicker.value);
    }

    function selectDate() {
        const date = document.getElementById('date-picker').value;
        updateSchedule(date);
    }

    function updateSchedule(date) {
        const scheduleContainer = document.getElementById('schedule-container');
        scheduleContainer.innerHTML = `<div>Loading schedule for ${date}...</div>`;
        // Simulate fetching data (replace with actual API call if needed)
        setTimeout(() => {
            scheduleContainer.innerHTML = `
                <div class="game-card">
                    <div class="game-time">7:00 PM EST</div>
                    <div class="team">
                        <img src="https://via.placeholder.com/20" alt="Example">
                        <div class="team-name">Example Team 1</div>
                        <div class="score">0-0-0</div>
                    </div>
                    <div class="team">
                        <img src="https://via.placeholder.com/20" alt="Example">
                        <div class="team-name">Example Team 2</div>
                        <div class="score">0-0-0</div>
                    </div>
                </div>`;
        }, 500);
    }
</script>



    <h1>Scores des matchs de hockey</h1>
    <% if (games && games.length > 0) { %>
        <% games.forEach(dateEntry => { %>
            <h2>Date : <%= dateEntry.date %></h2>
            <ul>
                <% dateEntry.games.forEach(game => { %>
                    <li>
                        <ul><%= game.period %></ul>
                        <ul><strong><%= game.awayTeam.abbrev %></strong></ul>
                        <ul>
                            <strong>
                                <img style="max-width: 5%;" src="<%= game.awayTeam.logo %>" alt="<%= game.homeTeam.name %>"></strong>
                                <strong><%= game.awayTeam.name %></strong>-<%= game.awayTeam.score %>
                            </strong>
                        </ul>
                        <ul>
                            <strong>
