<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <style>
        body {
            background-color: black;
            color: white;
            font-family: 'Arial', sans-serif;
            transform: scale(0.85);
        }
        .card {
            background-color: #b30000;
            color: white;
            border-radius: 10px;
            transform: scale(0.95);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
        }
        .card-body {
            background-color: #990000;
        }
        .form-label {
            color: white;
            font-weight: bold;
        }
        .btn-primary {
            background-color: #ff0000;
            border: none;
            box-shadow: 0 4px 6px rgba(255, 0, 0, 0.2);
        }
        .btn-primary:hover {
            background-color: #cc0000;
            box-shadow: 0 8px 12px rgba(255, 0, 0, 0.3);
        }
        .link-secondary {
            color: white;
        }
        .link-secondary:hover {
            text-decoration: underline;
        }
        .error, .login {
            color: white;
            background-color: #8B0000;
            padding: 10px;
            border-radius: 5px;
        }
        .signup-link {
            color: white;
            display: block;
            text-align: center;
            margin-top: 20px;
        }
        .signup-link a {
            color: #ff6666;
            font-weight: bold;
        }
        .signup-link a:hover {
            text-decoration: underline;
        }
        .card-header {
            background-color: #ff0000;
            color: white;
            font-size: 1.5rem;
            font-weight: bold;
            text-align: center;
            padding: 20px;
            border-radius: 10px 10px 0 0;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.5);
        }
        .form-control:focus {
            border-color: #ff0000;
            box-shadow: 0 0 5px rgba(255, 0, 0, 0.5);
        }
    </style>
</head>
<body>

<!-- Sign Up Form -->
<section class="bg-dark p-3 p-md-4 p-xl-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-5">
                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-header">
                        Sign Up Page
                    </div>
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <div class="row">
                            <div class="col-12">
                                <p class="mt-5 mb-4 text-center">Create your account with us</p>

                                <form id="signupForm" action="/register" method="POST">
                                    <div class="row gy-3 overflow-hidden">
                                        <div class="col-12">
                                            <div class="form-floating mb-3">
                                                <input type="text" class="form-control" name="fullName" id="fullName" placeholder="John Doe" required>
                                                <label for="fullName" class="form-label">Full Name</label>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-floating mb-3">
                                                <input type="email" class="form-control" name="email" id="email" placeholder="name@example.com" required>
                                                <label for="email" class="form-label">Email</label>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-floating mb-3">
                                                <input type="password" class="form-control" name="password" id="password" placeholder="Password" required>
                                                <label for="password" class="form-label">Password</label>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-floating mb-3">
                                                <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" placeholder="Confirm Password" required>
                                                <label for="confirmPassword" class="form-label">Confirm Password</label>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="d-grid">
                                                <button class="btn btn-primary" type="submit">Sign Up Now</button>
                                            </div>
                                            <br>
                                            <a href="/login" class="link-secondary text-decoration-none">Already a member? Log in</a>
                                        </div>
                                    </div>
                                </form>

                                <!-- Error or success message handling -->
                                <div class="error mt-4" style="display: none;">
                                    <p>Something went wrong. Please try again.</p>
                                </div>

                                <div class="login mt-4" style="display: none;">
                                    <p>Your account has been created successfully!</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

</body>
</html>
