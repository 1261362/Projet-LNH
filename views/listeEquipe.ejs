                  <li><a href="#">Ajout dun autre chose</a></li>
                </ul>          
              </div>
          </div>    
          <% }) %>
    </div>
    <div class="box">
      <h2>Central</h2>
      <% CentralTeams.forEach(equipe => { %>
          <div class="team-card">
            <div class="team-card-img">
              <a href="/equipe/<%= equipe.teamsABV %>"><img src="<%= equipe.logo %>" style="text-align: right;" alt="Logo <%= equipe.name %>">
              </a>
            </div>
            <div class="team-info">   
              <h3><%= equipe.full_name %></h3>   
