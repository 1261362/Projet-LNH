     async function deleteUser(id) {
         try {
             const response = await fetch(`/users/${id}`, { method: 'DELETE' });
             if (response.ok) {
                 alert("User deleted successfully");
                 location.reload();
             } else {
                 alert("Failed to delete the user");
             }
         } catch (error) {
             console.error("Error deleting user:", error);
         }
     }
 </script>
</body>
